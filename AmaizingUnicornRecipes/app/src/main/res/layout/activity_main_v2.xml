<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:id="@+id/main_top_bar">
        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/main_settings_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:background="@drawable/donut_settings_gear" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/main_settings_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:id="@+id/main_title_text"
                />
        </LinearLayout>

        <View
            android:id="@+id/horizontal_bar_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/main_settings_button"
            android:background="#d2dfdb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_settings_button"
            android:id="@+id/main_button_container"
            android:paddingBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".33"
                android:layout_margin="1dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/main_button_1"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    />

                <View
                    android:id="@+id/main_bar_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2dfdb"
                    android:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".34"
                android:layout_margin="1dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/main_button_2"
                    android:textColor="#FFFFFF"
                    />

                <View
                    android:id="@+id/main_bar_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2dfdb"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".33"
                android:layout_margin="1dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/main_button_3"
                    android:textColor="#FFFFFF"
                    />

                <View
                    android:id="@+id/main_bar_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d2dfdb"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top_bar"/>

    </RelativeLayout>

    <ListView android:id="@+id/nav_drawer_left"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:entries="@array/drawer_list"
        android:background="@color/green_a400"
        />

    <ListView android:id="@+id/pref_drawer_right"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:entries="@array/preference_list"
        android:background="@color/blue_700"
        />


</android.support.v4.widget.DrawerLayout>